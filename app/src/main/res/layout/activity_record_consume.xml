<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Activity_record_consume">


    <EditText
        android:id="@+id/spending_money"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="请输入消费金额"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/spending_stores"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="请输入消费商家(可空)"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/spending_times"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="请输入时间"
        android:inputType="textPersonName" />
<!--    <DatePicker-->
<!--        android:id="@+id/spending_time"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:datePickerMode="calendar"-->
<!--        android:hint="请输入消费时间"-->
<!--        android:inputType="date" />-->
    <EditText
        android:id="@+id/spending_credential"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="选择消费凭据"
      />

    <EditText
        android:id="@+id/spending_types"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="选择消费类型"
      />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="80dp"
            android:text="添加"
            android:textSize="34sp"
            />

        <Button
            android:id="@+id/btn_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"
            android:text="返回"
            android:textSize="34sp"
            />
    </LinearLayout>

</LinearLayout>