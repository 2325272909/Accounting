<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Activity_modify_consume">

    <TextView
        android:id="@+id/spending"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="修改消费记录"
        android:inputType="textPersonName"
        android:textSize="24sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_money"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:gravity="center|left"
            android:text="消费金额:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/modify_spending_money"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="请输入消费金额"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_store"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:gravity="center|left"
            android:text="消费商家:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/modify_spending_stores"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="请输入消费商家(可空)"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:gravity="center|left"
            android:text="消费时间:"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/modify_spending_times"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="请输入时间"
            android:inputType="textPersonName" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_credential"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:gravity="center|left"
            android:text="消费凭据:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/modify_spending_credential"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="选择消费凭据"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_type"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:gravity="center|left"
            android:text="消费类型:"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/modify_spending_types"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="选择消费类型"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_modify_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="80dp"
            android:text="修改"
            android:textColor="@color/white"
            android:background="@color/purple_500"
            android:textSize="34sp"
            />

        <Button
            android:id="@+id/btn_modify_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"
            android:text="返回"
            android:textColor="@color/white"
            android:background="@color/purple_500"
            android:textSize="34sp"
            />
    </LinearLayout>

</LinearLayout>