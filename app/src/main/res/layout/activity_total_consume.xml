<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity_total_consume"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#CCFFC8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:gravity="left|center"
                android:paddingBottom="15dp"
                android:text="&#060;"
                android:textColor="#595656"
                android:background="#00FEFEFE"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/detail_spending"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:gravity="left|center"
                android:paddingBottom="15dp"
                android:text="消费详情"
                android:textColor="#02457A"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/calender"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingBottom="15dp"
                    android:text="日期"
                    android:textColor="#0E0D0B"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/search"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="#00FEFEFE"
                    android:gravity="left"
                    android:text="查询"
                    android:textColor="#1C0647"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_spendingChart"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:background="#00FEFEFE"
                    android:gravity="right"
                    android:text="图表->"
                    android:textColor="#595656"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/spending_money"
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingBottom="15dp"
                    android:text="总消费 :"
                    android:textColor="#0E0D0B"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edt_spending"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="#00FEFEFE"
                    android:text="消费金额"
                    android:textColor="#1C0647"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_income"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:background="#00FEFEFE"
                    android:gravity="right"
                    android:text="收入->"
                    android:textColor="#595656"
                    android:textSize="16sp" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/consume_recycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:overScrollMode="never"
        android:scrollbars="none"/>

</LinearLayout>