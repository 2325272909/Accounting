<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity_total_income"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#CCFFC8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_income"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:paddingBottom="15dp"
                android:text="今日收支"
                android:textColor="#02457A"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/income_money"
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingBottom="15dp"
                android:text="支出 :"
                android:textColor="#0E0D0B"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_income"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="#00FEFEFE"
                android:text="支出金额"
                android:textColor="#1C0647"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/consume_money"
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingBottom="15dp"
                android:text="收入 :"
                android:textColor="#0E0D0B"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_consume"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="#00FEFEFE"
                android:text="收入金额"
                android:textColor="#1C0647"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/total_calender"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingBottom="15dp"
                    android:text="日期"
                    android:textColor="#0E0D0B"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/search"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="#00FEFEFE"
                    android:gravity="left"
                    android:text="查询"
                    android:textColor="#1C0647"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txt_balance"
                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingBottom="15dp"
                    android:text="结余 :"
                    android:textColor="#0E0D0B"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edt_total_balance"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="#00FEFEFE"
                    android:text="结余金额"
                    android:textColor="#1C0647"
                    android:textSize="20sp" />

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/income_recycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:overScrollMode="never"
        android:scrollbars="none"/>

</LinearLayout>