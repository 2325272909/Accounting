<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="简记"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.Accounting"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name=".Activity.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.MainActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.ModifyActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.ModifyPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.CategoryListActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity_record_consume"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity_record_income"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity_total_consume"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity_total_income"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity_record_OCR"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity_modify_consume"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity_modify_income"
            android:exported="false" />
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

</manifest>